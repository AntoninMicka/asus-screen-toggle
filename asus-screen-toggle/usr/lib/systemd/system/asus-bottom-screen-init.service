[Unit]
Description=ASUS Duo – zapni spodní displej, pokud je klávesnice připojena
After=sddm.service
Requires=sddm.service

[Service]
Type=simple
ExecStart=/usr/bin/asus-check-rotation.sh
Restart=on-failure
RemainAfterExit=true
ExecReload=/usr/bin/asus-check-keyboard-system.sh
ExecStop=/usr/bin/asus-check-keyboard-system.sh

[Install]
WantedBy=default.target
